{
  "name": "@yt-audio-summary/cf-backend",
  "version": "1.0.0",
  "description": "Cloudflare Workers backend using Hono and tRPC for YouTube Audio Summary",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "clean": "rm -rf dist",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "type-check": "tsc --noEmit",
    "verify": "pnpm lint && pnpm type-check && pnpm build",
    "test": "jest"
  },
  "keywords": ["cloudflare", "workers", "hono", "trpc", "backend"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@yt-audio-summary/api-definition": "workspace:*",
    "@trpc/server": "^11.0.0",
    "@hono/node-server": "^1.8.0",
    "hono": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "wrangler": "^3.0.0",
    "@biomejs/biome": "^1.8.0"
  }
}
